html {
  scroll-behavior: smooth;
}

body {
  font-family: 'Open Sans', sans-serif !important;
}

.ui.fixed.vertical.menu {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: stretch;
  text-align: center;
  height: 100%;
  width: 250px;
  padding-bottom: 50px;
}

.ui.fixed.vertical.menu > a:first-child {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 30px;
}

.ui.fixed.vertical.menu > a:nth-child(n+1) {
  transition: background-color 0.5s;
}

.ui.fixed.vertical.menu img {
  transform: rotate(-3deg);
}

main {
  margin-left: 250px;
}

main section {
  height: 100vh;
}

section#landing {
  position: relative;
  background-image: linear-gradient(rgba(127, 127, 127, 0.5), rgba(127, 127, 127, 0.5)),
    url('http://source.unsplash.com/RWzPBcWVdpw');
  background-repeat: no-repeat;
  background-size: cover;
  background-position-x: center;
}

section#landing > .landing-title {
  position: relative;
  top: 50%;
  transform: translateY(-50%);
  text-align: center;
}

section#landing > .landing-title > .landing-name {
  font-size: 62px;
  font-weight: 700;
}

section#landing > i {
  color: rgba(0, 0, 0, 0.3);
  position: absolute;
  left: 0;
  right: 0;
  bottom: 50px;
  margin: 0 auto;
}
